extends base

block content 
    main.main 
        .card-container

            each tour in tours 
                .card
                    .card__header
                        .card__picture
                            .card__picture-overlay &nbsp;
                            img.card__picture-img(src=`img/tours/${tour.imageCover}`, alt=`${tour.name}`)
                        h3.heading-tertirary
                            span=tour.name

                    .card__details
                        h4.card__sub-heading=`${tour.difficulty} ${tour.duration}-day tour`
                        p.card__text Breathtaking hike through the Canadian Banff National Park
                    .card__data
                        svg.card__icon
                            use(xlink:href='img/icons.svg#icon-map-pin')
                        span Banff, Canada  
                    .card__data
                        svg.card__icon
                            use(xlink:href='img/icons.svg#icon-calendar')
                        span April 2021
                    .card__data
                        svg.card__icon
                            use(xlink:href='img/icons.svg#icon-flag')
                        span 3 stops
                    .card__data
                        svg.card__icon
                            use(xlink:href='img/icons.svg#icon-user')
                        span 25 people

                    .card__footer
                        p
                            span.card__footer-value=`$${tour.price}`
                            | 
                            span.card__footer-text per person
                        p.card__ratings
                            span.card__footer-value=tour.ratingAverage
                            | 
                            span.card__footer-text= `rating(${tour.ratingQuantity})`
                        a.btn.btn--green.btn--small(href='/tours/${tour.slug}') Details